generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  MEMBER
  ADMIN
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
  @@map("verification_tokens")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime? @map("email_verified")
  role          Role      @default(MEMBER)
  highestStreak Int       @default(0) @map("highest_streak")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  View   View[]
  Streak Streak[]

  @@map("users")
}

model Post {
  id String @id @default(cuid())

  views View[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("posts")
}

model View {
  id Int @id @default(autoincrement())

  utmSource   String? @map("utm_source")
  utmMedium   String? @map("utm_medium")
  utmCampaign String? @map("utm_campaign")
  utmChannel  String? @map("utm_channel")

  postId String @map("post_id")
  post   Post   @relation(fields: [postId], references: [id])

  userId String @map("user_id")
  user   User   @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@unique([userId, postId])
  @@map("views")
}

model Streak {
  id              Int      @id @default(autoincrement())
  startStreakDate DateTime @map("start_streak_date")
  lastStreakDate  DateTime @map("last_streak_date")

  userId String @map("user_id")
  user   User   @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([lastStreakDate])
  @@map("streaks")
}

model Level {
  id            Int    @id @default(autoincrement())
  name          String
  description   String
  minStreakDays Int    @default(0) @map("min_streak_days")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("levels")
}
